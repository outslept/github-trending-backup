{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*", "packages/*/*.ts", "*.js", "*.ts"],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
