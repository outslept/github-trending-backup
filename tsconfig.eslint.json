{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "scripts/**/*",
    "*.js",
    "*.ts",
    "*.mjs",
    ".prettierc.js",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules", "**/dist", "**/build", "data"]
}
