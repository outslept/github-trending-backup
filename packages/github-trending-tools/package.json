{
  "name": "github-trending-tools",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.10.0",
  "description": "GitHub trending repositories scraper",
  "keywords": [
    "github",
    "trending",
    "scraper",
    "repositories"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "github-trending": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsx watch cli.ts",
    "start": "tsx cli.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "node-html-parser": "catalog:script"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "tsdown": "catalog:build",
    "tsx": "catalog:script"
  }
}
