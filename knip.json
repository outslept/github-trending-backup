{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": ["publint"],
  "workspaces": {
    "packages/github-trending-tools": {
      "entry": ["cli.ts", "index.ts"],
      "project": ["src/**/*.ts", "*.ts"],
      "ignore": ["tsdown.config.ts"]
    },
    "packages/github-trending-inspector": {
      "entry": [
        "src/app/layout.tsx",
        "src/app/page.tsx",
        "src/app/not-found.tsx",
        "src/app/api/commits/route.ts",
        "src/app/api/trending/route.ts",
        "src/app/globals.css",
        "next.config.ts",
        "postcss.config.mjs"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["next-env.d.ts", "components.json", "README.md"],
      "ignoreDependencies": ["github-trending-tools", "tailwindcss", "tw-animate-css", "postcss"]
    }
  }
}
